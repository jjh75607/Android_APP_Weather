<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cookandroid.androidproject_weatherv2.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/sidospinner"
            android:layout_width="125dp"
            android:layout_height="30dp"
            android:prompt="@string/sido"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/gugunspinner"
            android:layout_width="125dp"
            android:layout_height="30dp"
            android:prompt="@string/gugun"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/dongspinner"
            android:layout_width="125dp"
            android:layout_height="30dp"
            android:prompt="@string/dong"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/getBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="날씨보기" />

        <Button
            android:id="@+id/gpsBtn"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPS로 보기" />

    </LinearLayout>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:text="" />
    </ScrollView>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>
